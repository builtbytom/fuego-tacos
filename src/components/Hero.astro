<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Video/Image background -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900"></div>
    <img 
      src="https://images.unsplash.com/photo-1565299585323-38d6b0865b47?w=1920&q=80" 
      alt="Delicious tacos"
      class="absolute inset-0 w-full h-full object-cover opacity-40 mix-blend-overlay"
    />
  </div>
  
  <!-- Animated smoke/heat effect -->
  <div class="absolute inset-0 opacity-30">
    <div class="absolute top-0 left-0 w-96 h-96 bg-fuego-500 rounded-full filter blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-orange-500 rounded-full filter blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>
  
  <!-- Hero content -->
  <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
    <div class="mb-8 animate-fade-in">
      <span class="inline-block px-4 py-2 bg-fuego-500/20 border border-fuego-500/50 text-fuego-400 rounded-full text-sm font-medium backdrop-blur-sm">
        ðŸ”¥ New Haven's Hottest Taco Spot
      </span>
    </div>
    
    <h1 class="font-display text-6xl md:text-8xl lg:text-9xl text-white mb-6 animate-fade-in leading-none" style="animation-delay: 0.2s;">
      <span class="block text-fuego-500">CRAVE-WORTHY</span>
      <span class="block">STREET TACOS</span>
    </h1>
    
    <p class="text-xl md:text-2xl lg:text-3xl text-zinc-300 mb-12 animate-fade-in max-w-2xl mx-auto leading-relaxed" style="animation-delay: 0.4s;">
      Hand-pressed tortillas. Fire-kissed meats. 
      <span class="text-fuego-400 font-semibold">Flavors that haunt your dreams.</span>
    </p>
    
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in" style="animation-delay: 0.6s;">
      <a href="#menu" class="group relative bg-fuego-500 text-white px-10 py-5 rounded-full hover:bg-fuego-600 transition-all transform hover:scale-105 font-medium text-lg overflow-hidden">
        <span class="relative z-10">See What's Cooking</span>
        <div class="absolute inset-0 bg-gradient-to-r from-fuego-600 to-fuego-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
      </a>
      <a href="#location" class="group border-2 border-white/50 text-white px-10 py-5 rounded-full hover:bg-white hover:text-zinc-900 transition-all transform hover:scale-105 font-medium text-lg backdrop-blur-sm">
        <span class="flex items-center gap-2">
          <span>Order Now</span>
          <span class="group-hover:translate-x-1 transition-transform">â†’</span>
        </span>
      </a>
    </div>
    
    <!-- Trust signals -->
    <div class="mt-16 flex items-center justify-center gap-8 text-zinc-400 animate-fade-in" style="animation-delay: 0.8s;">
      <div class="flex items-center gap-2">
        <span class="text-yellow-500">â˜…â˜…â˜…â˜…â˜…</span>
        <span class="text-sm">4.9 on Google</span>
      </div>
      <div class="text-sm">
        <span class="text-fuego-400 font-semibold">2,000+</span> Happy Customers
      </div>
      <div class="text-sm">
        Open Until <span class="text-fuego-400 font-semibold">11PM</span>
      </div>
    </div>
  </div>
  
  <!-- Animated scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
    opacity: 0;
  }
</style>