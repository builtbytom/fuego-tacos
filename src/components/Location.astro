---
// Read the site settings
import { readFileSync } from 'fs';
import { join } from 'path';

const settingsPath = join(process.cwd(), 'src/content/settings/site.json');
const settings = JSON.parse(readFileSync(settingsPath, 'utf-8'));
---

<section id="location" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="font-display text-5xl md:text-6xl text-zinc-900 mb-6">Find Us</h2>
        
        <div class="space-y-6 mb-8">
          <div>
            <h3 class="font-semibold text-xl mb-2 flex items-center gap-2">
              <span class="text-fuego-500">ğŸ“</span> Location
            </h3>
            <p class="text-zinc-600 whitespace-pre-line">{settings.address}</p>
          </div>
          
          <div>
            <h3 class="font-semibold text-xl mb-2 flex items-center gap-2">
              <span class="text-fuego-500">ğŸ“</span> Phone
            </h3>
            <a href={`tel:${settings.phone.replace(/\D/g, '')}`} class="text-fuego-600 hover:text-fuego-700 font-medium">
              {settings.phone}
            </a>
          </div>
          
          <div>
            <h3 class="font-semibold text-xl mb-3 flex items-center gap-2">
              <span class="text-fuego-500">ğŸ•’</span> Hours
            </h3>
            <div class="space-y-1">
              {Object.entries(settings.hours).map(([day, hours]) => (
                <div class="flex justify-between">
                  <span class="text-zinc-600 capitalize">{day}</span>
                  <span class="text-zinc-900 font-medium">{hours}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <div class="flex gap-4">
          <a href="#" class="bg-fuego-500 text-white px-6 py-3 rounded-full hover:bg-fuego-600 transition-colors font-medium">
            Get Directions
          </a>
          <a href={`tel:${settings.phone.replace(/\D/g, '')}`} class="border-2 border-fuego-500 text-fuego-600 px-6 py-3 rounded-full hover:bg-fuego-500 hover:text-white transition-colors font-medium">
            Call Now
          </a>
        </div>
      </div>
      
      <div class="relative h-96 lg:h-full min-h-[400px] rounded-lg overflow-hidden">
        <!-- Map placeholder with styled background -->
        <div class="absolute inset-0 bg-zinc-200">
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
              <div class="w-20 h-20 bg-fuego-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-white text-4xl">ğŸ“</span>
              </div>
              <p class="text-zinc-600 font-medium">Interactive Map</p>
              <p class="text-zinc-500 text-sm mt-1">123 Main Street, New Haven</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>